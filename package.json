{
  "name": "graphql-jobs",
  "version": "0.0.0-semantically-released",
  "author": {
    "name": "Ricardo Q. Bazan",
    "email": "raquirozbazan@gmail.com",
    "url": "https://sxntixgo.codes"
  },
  "license": "MIT",
  "scripts": {
    "dev": "next",
    "storybook": "start-storybook -p 3001 -s public",
    "start": "next start",
    "build:next": "next build",
    "build:storybook": "build-storybook -o public/storybook -s public",
    "build": "run-p build:*",
    "eslint": "eslint --ignore-path .gitignore --ext .ts,.tsx",
    "lint": "yarn eslint .",
    "check-types": "tsc",
    "prettier": "prettier --ignore-path .gitignore \"**/*.+(json|ts|tsx)\"",
    "format": "yarn prettier --write",
    "check-format": "yarn prettier --list-different",
    "validate": "run-p check-types check-format lint build"
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged",
      "commit-msg": "commitlint -E HUSKY_GIT_PARAMS"
    }
  },
  "lint-staged": {
    "*.{ts,tsx}": [
      "yarn eslint",
      "git add"
    ],
    "*.{json,ts,tsx}": [
      "yarn format",
      "git add"
    ]
  },
  "eslintConfig": {
    "extends": "rqbazan-ts/react"
  },
  "commitlint": {
    "extends": [
      "@commitlint/config-conventional"
    ]
  },
  "dependencies": {
    "next": "^9.2.0",
    "react": "^16.12.0",
    "react-dom": "^16.12.0"
  },
  "devDependencies": {
    "@babel/core": "^7.8.3",
    "@commitlint/cli": "^8.3.5",
    "@commitlint/config-conventional": "^8.3.4",
    "@fullhuman/postcss-purgecss": "^1.3.0",
    "@storybook/react": "^5.3.6",
    "@types/node": "^13.1.8",
    "@types/react": "^16.9.17",
    "@zeit/next-css": "^1.0.1",
    "autoprefixer": "^9.7.4",
    "babel-loader": "^8.0.6",
    "babel-preset-react-app": "^9.1.0",
    "eslint": "^6.8.0",
    "eslint-config-rqbazan-ts": "^0.3.1",
    "husky": "^4.0.10",
    "lint-staged": "^9.5.0",
    "npm-run-all": "^4.1.5",
    "postcss-preset-env": "^6.7.0",
    "prettier": "^1.19.1",
    "tailwindcss": "^1.1.4",
    "typescript": "^3.7.5"
  }
}
